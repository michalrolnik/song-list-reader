{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2021",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
  },
  //"include": ["src/**/*", "test/app.controller.spec.ts"],
  "exclude": ["node_modules", "dist", "test", "test/**/*", "**/*.spec.ts", "**/*.e2e-spec.ts"]
}
